{% extends "Layout/layout.twig" %}

{% block assets %}
    {{ assets({files: ['Events/events.css'], name: 'events.css'}) }}
    {{ assets({files: ['Events/events.js'], name: 'events.js'}) }}
{% endblock %}

{% block content %}
    <h1>{{ __('Events') }}</h1>

    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">{{ __('Name') }}</th>
            <th scope="col">{{ __('Date') }}</th>
            <th scope="col">{{ __('Location') }}</th>
        </tr>
        </thead>
        <tbody id="target"></tbody>
    </table>

    <script type="text/html" id="event-list">
        {{ source('Events/events.mustache') }}
    </script>

{% endblock %}
